<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BorderView">
        <attr name="card_background_color" format="color" />
        <attr name="card_stroke_color" format="color" />
        <attr name="card_stroke_width" format="dimension" />
        <attr name="card_corner_radius" format="dimension" />
        <attr name="card_shadow_color" format="color" />
        <attr name="card_ripple_color" format="color" />
    </declare-styleable>

    <style name="ShapeAppearanceOverlay.App.CornerSize8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10dp" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="tag_chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">18dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">@color/gray9</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textAppearance">@style/Medium.12</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CategoryTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">@color/gray6</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextAppearance">@style/B1_P_B14</item>
    </style>

    <style name="TabButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/bg_tab_button</item>
        <item name="android:textAppearance">@style/C2_P_M12</item>
        <item name="android:textColor">@color/text_color_tab_button</item>
        <item name="cornerRadius">0dp</item>
    </style>
</resources>