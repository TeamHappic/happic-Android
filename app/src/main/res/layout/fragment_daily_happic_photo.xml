<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="happy.kiki.happic.module.report.data.enumerate.ReportCategoryOption" />

        <variable
            name="viewModel"
            type="happy.kiki.happic.module.dailyhappic.ui.fragment.DailyHappicViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <happy.kiki.happic.module.core.ui.widget.BorderView
            android:id="@+id/border_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            app:card_corner_radius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Bold.16"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2022.06" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:rotation="180"
                android:src="@drawable/chevron_up_20"
                app:layout_constraintBottom_toBottomOf="@id/tv_month"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_month"
                app:layout_constraintTop_toTopOf="@id/tv_month" />

        </happy.kiki.happic.module.core.ui.widget.BorderView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_month">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp" />

        </ScrollView>

        <happy.kiki.happic.module.core.ui.widget.MonthSelectView
            android:id="@+id/month_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_month" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>