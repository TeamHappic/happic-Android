<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="hint"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <happy.kiki.happic.module.core.ui.widget.BorderView
            android:id="@+id/border_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:card_background_color="@color/gray9"
            app:card_corner_radius="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_text_field"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="14dp"
                    android:layout_marginStart="24dp"
                    android:text="@{title}"
                    android:textAppearance="@style/Bold.14"
                    android:textColor="@color/gray4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="#when" />

                <View
                    android:id="@+id/boundary"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="88dp"
                    android:background="@color/gray7"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:hint="@{hint}"
                    android:inputType="text"
                    android:textAppearance="@style/Bold.14"
                    android:textColor="@color/gray1"
                    android:textColorHint="@color/gray6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/boundary"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:hint="시간을 입력해주세요" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_black2"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:visibility="gone"
                app:chipSpacingHorizontal="6dp"
                app:layout_constraintTop_toBottomOf="@id/cl_text_field"
                app:singleLine="false" />


        </happy.kiki.happic.module.core.ui.widget.BorderView>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/border_field" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
