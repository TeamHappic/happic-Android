<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="happy.kiki.happic.module.report.data.enumerate.ReportCategoryOption" />

        <variable
            name="viewModel"
            type="happy.kiki.happic.module.report.ui.fragment.ReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <happy.kiki.happic.module.core.ui.widget.BorderView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="1dp"
            android:outlineProvider="none"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/yearMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Medium.16"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020.06" />

            <ImageView
                android:id="@+id/header_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:rotation="180"
                android:src="@drawable/chevron_up_20"
                app:layout_constraintBottom_toBottomOf="@id/yearMonth"
                app:layout_constraintStart_toEndOf="@id/yearMonth"
                app:layout_constraintTop_toTopOf="@id/yearMonth" />
        </happy.kiki.happic.module.core.ui.widget.BorderView>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_shadow"
            android:elevation="1dp"
            android:outlineProvider="none"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <happy.kiki.happic.module.core.ui.widget.MonthSelectView
            android:id="@+id/month_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/header"
            tools:alpha="0.01"
            tools:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_black1"
            android:paddingTop="48dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">


                <TextView
                    android:id="@+id/section_moment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Bold.16"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hello world" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/moment_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="8dp"
                    android:minHeight="220dp"
                    app:card_corner_radius="10dp"
                    app:card_shadow_color="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/section_moment_text">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_dark_blue_gradient_top_right" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/moment_data_container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="28dp"
                        android:paddingStart="36dp"
                        android:paddingEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread">


                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:barrierDirection="end"
                            app:barrierMargin="12dp"
                            app:constraint_referenced_ids="moment_what, moment_when, moment_who, moment_where" />

                        <TextView
                            android:id="@+id/moment_when"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/H1_G_B20"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toTopOf="@+id/moment_where"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="오전9시" />

                        <TextView
                            android:id="@+id/moment_where"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/H1_G_B20"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toTopOf="@+id/moment_who"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/moment_when"
                            tools:text="울집방구석" />

                        <TextView
                            android:id="@+id/moment_who"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/H1_G_B20"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toTopOf="@+id/moment_what"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/moment_where"
                            tools:text="햄식이" />

                        <TextView
                            android:id="@+id/moment_what"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/H1_G_B20"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/moment_who"
                            tools:text="귀여워" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="에"
                            android:textAppearance="@style/B2_P_M14"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@id/moment_when"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/b"
                            app:layout_constraintTop_toTopOf="@id/moment_when" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="에서"
                            android:textAppearance="@style/B2_P_M14"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@id/moment_where"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/b"
                            app:layout_constraintTop_toTopOf="@id/moment_where" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="와 함께"
                            android:textAppearance="@style/B2_P_M14"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@id/moment_who"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/b"
                            app:layout_constraintTop_toTopOf="@id/moment_who" />

                        <TextView
                            android:id="@+id/moment_what_suffix"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="하는 순간 가장 행복했어요"
                            android:textAppearance="@style/B2_P_M14"
                            android:textColor="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@id/moment_what"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/b"
                            app:layout_constraintTop_toTopOf="@id/moment_what" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/moment_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집된 해픽이 부족해요"
                        android:textAppearance="@style/GMarketBold.20"
                        android:textColor="@color/gray2"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/moment_indicator"
                        style="@style/Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-33dp"
                    android:elevation="11dp"
                    android:outlineProvider="none"
                    android:src="@drawable/character_cloud_67"
                    app:layout_constraintEnd_toEndOf="@id/moment_card"
                    app:layout_constraintTop_toTopOf="@id/moment_card" />


                <ImageView
                    android:id="@+id/keyword_section_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/hp_img_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/moment_card" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/section_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    app:card_corner_radius="6dp"
                    app:layout_constraintTop_toBottomOf="@id/keyword_section_image">

                    <TextView
                        android:id="@+id/section_keyword_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="당신의 행복 키워드 순위"
                        android:textAppearance="@style/Bold.16"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/section_keyword_chevron"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/section_keyword_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chevron_right_gray3_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </happy.kiki.happic.module.core.ui.widget.BorderView>


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_keyword_content_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="keyword_rank_container, empty_keyword" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/empty_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:card_background_color="@color/gray9"
                    app:card_corner_radius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/section_keyword">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집된 해픽이 부족해요"
                        android:textAppearance="@style/GMarketBold.20"
                        android:textColor="@color/gray2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <LinearLayout
                    android:id="@+id/keyword_rank_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/section_keyword" />

                <ImageView
                    android:id="@+id/category_section_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/hp_img_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier_keyword_content_bottom" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/section_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    app:card_corner_radius="6dp"
                    app:layout_constraintTop_toBottomOf="@id/category_section_image">

                    <TextView
                        android:id="@+id/section_category_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="카테고리 별 행복 키워드 순위"
                        android:textAppearance="@style/Bold.16"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/section_category_chevron"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/section_category_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chevron_right_gray3_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/section_category_tab_layout"
                    style="@style/CategoryTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    app:layout_constraintTop_toBottomOf="@id/section_category">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#when" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#where" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#who" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#what" />
                </com.google.android.material.tabs.TabLayout>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_category_content_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="category_rank_container, empty_category" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/empty_category"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:card_background_color="@color/gray9"
                    app:card_corner_radius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/section_category_tab_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집된 해픽이 부족해요"
                        android:textAppearance="@style/GMarketBold.20"
                        android:textColor="@color/gray2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <LinearLayout
                    android:id="@+id/category_rank_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/section_category_tab_layout" />


                <ImageView
                    android:id="@+id/monthly_section_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:src="@drawable/hp_img_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier_category_content_bottom" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/section_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    app:card_corner_radius="6dp"
                    app:layout_constraintTop_toBottomOf="@id/monthly_section_image">

                    <TextView
                        android:id="@+id/section_monthly_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="월 별 해픽 기록"
                        android:textAppearance="@style/Bold.16"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/section_monthly_chevron"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/section_monthly_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chevron_right_gray3_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/section_monthly">

                    <happy.kiki.happic.module.core.ui.widget.MonthlyRecordPlanet
                        android:id="@+id/monthly_record_planet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>