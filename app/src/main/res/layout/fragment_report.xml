<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="happy.kiki.happic.module.report.ui.fragment.ReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <happy.kiki.happic.module.core.ui.widget.BorderView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/yearMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Medium.16"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020.06" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:src="@drawable/chevron_up_20"
                app:layout_constraintBottom_toBottomOf="@id/yearMonth"
                app:layout_constraintStart_toEndOf="@id/yearMonth"
                app:layout_constraintTop_toTopOf="@id/yearMonth" />
        </happy.kiki.happic.module.core.ui.widget.BorderView>

        <happy.kiki.happic.module.core.ui.widget.MonthSelectView
            android:id="@+id/month_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/header"
            tools:alpha="0.2"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_shadow"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="32dp">

                <TextView
                    android:id="@+id/section_moment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Bold.16"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hello world" />

                <happy.kiki.happic.module.core.ui.widget.BorderView
                    android:id="@+id/moment_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="8dp"
                    android:minHeight="220dp"
                    app:card_corner_radius="10dp"
                    app:card_shadow_color="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/section_moment_text">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_dark_blue_gradient_top_right" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="28dp"
                        android:layout_marginStart="36dp">

                        <TextView
                            android:id="@+id/moment_when"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/GMarketBold.20"
                            android:textColor="@color/gray2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="오전9시" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수집된 해픽이 부족해요"
                        android:textAppearance="@style/GMarketBold.20"
                        android:textColor="@color/gray2"
                        android:visibility="@{true}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>


                </happy.kiki.happic.module.core.ui.widget.BorderView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-33dp"
                    android:elevation="11dp"
                    android:outlineProvider="none"
                    android:src="@drawable/character_cloud_67"
                    app:layout_constraintEnd_toEndOf="@id/moment_card"
                    app:layout_constraintTop_toTopOf="@id/moment_card" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>